<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonFragment"
    android:background="@color/colorWhite">
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageHeader"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/header"
                        android:layout_marginTop="-95dp"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/anh3"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="35dp">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="80px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:layout_toRightOf="@id/imageProfile"
                        android:text="Nhóm 13"
                        android:textColor="#848484"
                        android:textSize="25dp"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:id="@+id/txtLocal"
                        android:layout_below="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="50px"
                        android:layout_toRightOf="@id/imageProfile"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:text="Việt Nam"
                        android:textSize="13dp"
                        android:drawableStart="@drawable/ic_baseline_add_location_24"

                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-110dp"
                android:background="#FAFAFA"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Đã đánh dấu"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_baseline_bookmark_border_24"
                        android:drawablePadding="5dp"/>
                    <TextView
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:padding="20dp"
                        android:textStyle="bold"
                        android:text="Đang theo dõi"
                        android:drawableStart="@drawable/ic_baseline_check_circle_outline_24"
                        android:drawablePadding="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:padding="20dp"
                        android:text="Đọc offline"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:drawableStart="@drawable/ic_baseline_public_off_24"
                        android:drawablePadding="5dp"/>

                    <TextView
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:padding="20dp"
                        android:text="Thông báo"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_baseline_notifications_none_24"
                        android:drawablePadding="5dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">>
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#0000FF"
                    android:text="Hoạt Động"
                    android:paddingBottom="5dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đọc gần đây"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bình luận gần đây"
                    android:drawableStart="@drawable/ic_baseline_comment_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bình chọn gần đây"
                    android:drawableStart="@drawable/ic_baseline_insert_chart_outlined_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trả lời gần đây"
                    android:drawableStart="@drawable/ic_baseline_question_answer_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#0000FF"

                    android:text="Tiện ích"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lịch việt"
                    android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời tiết"
                    android:drawableStart="@drawable/ic_baseline_cloud_queue_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kết quả xổ số"
                    android:drawableStart="@drawable/ic_baseline_offline_pin_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá vàng"
                    android:drawableStart="@drawable/ic_baseline_broken_image_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Live Core"
                    android:drawableStart="@drawable/ic_baseline_live_tv_24"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CÀI ĐẶT"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#0000FF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Tin địa phương"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_baseline_place_24"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn địa phương"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Theme"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_baseline_settings_input_svideo_24"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn theme"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="5dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="Nâng cao"
                        android:drawableStart="@drawable/ic_baseline_settings_24"
                        android:drawablePadding="5dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">>
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#0000FF"
                    android:text="SẢN PHẨM"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đối tác chính thức"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiểm tra phiên bản"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều khoản dịch vụ"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bình chọn, đánh giá "
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email góp ý, báo lỗi"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btndangxuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Đăng xuất"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>